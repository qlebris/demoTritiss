{% extends 'base.html.twig' %}

{% block title %} {{ category.name }} {% endblock %}

{% block body %}
    <div class="mt-4 align-items-center row">
        {% for article in articles %}
            <div class="col-lg-4 col-sm-8">
                <div id="carousel{{ article.id }}" class="carousel slide mb-2" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% if article.imageName1 %}
                            <li data-target="#carousel{{ article.id }}" data-slide-to="0" class="active"></li>
                        {% endif %}
                        {% if article.imageName2 %}
                            <li data-target="#carousel{{ article.id }}" data-slide-to="1"></li>
                        {% endif %}
                        {% if article.imageName3 %}
                            <li data-target="#carousel{{ article.id }}" data-slide-to="2"></li>
                        {% endif %}
                        {% if article.imageName4 %}
                            <li data-target="#carousel{{ article.id }}" data-slide-to="3"></li>
                        {% endif %}
                    </ol>
                    <div class="carousel-inner">
                        {% if article.imageName1 %}
                            <div class="carousel-item active">
                                <img class="img-fluid d-block w-100" src="/images/{{ article.imageName1 }}">
                            </div>
                        {% endif %}
                        {% if article.imageName2 %}
                            <div class="carousel-item">
                                <img class="img-fluid d-block w-100" src="/images/{{ article.imageName2 }}">
                            </div>
                        {% endif %}
                        {% if article.imageName3 %}
                            <div class="carousel-item">
                                <img class="img-fluid d-block w-100" src="/images/{{ article.imageName3 }}">
                            </div>
                        {% endif %}
                        {% if article.imageName4 %}
                            <div class="carousel-item">
                                <img class="img-fluid d-block w-100" src="/images/{{ article.imageName4 }}">
                            </div>
                        {% endif %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-lg-2 col-sm-4">
                <span class="text-colored"> {{ article.name }} </span> <br>
                <p> {{ article.description }} </p>
                <span class="price">{{ article.price }} â‚¬</span>
            </div>
        {% endfor %}
    </div>
    <a class="btn btn-round btn-outline-dark" href="{{ path('creations') }}">retour</a>
{% endblock %}