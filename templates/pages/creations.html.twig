{% extends 'base.html.twig' %}

{% block title %} Mes cr√©ations {% endblock %}

{% block body %}
    <div class="mt-4 align-items-center row">
        {% for category in categories %}
            <div class="col-lg-6 col-sm-12">
                <a href="{{ path('category_details', { 'slug': category.slug }) }}">
                    <img class="img-fluid category-img" src="/images/{{ category.imageName }}">
                    <h4 class="text-colored text-center mt-1">{{ category.name|upper }}</h4>
                </a>
                <p class="text-center">{{ category.description }}</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}