{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
        <div class="row justify-content-center">
            <a class="m-2 btn-round btn btn-primary" href="{{ path('category_new') }}">Ajouter</a>
        </div>
        <table class="mt-2 table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th class="{#d-none#}">Slug</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.description }}</td>
                    {# TODO: remove the slug once auto-generated #}
                    <td class="{#d-none#}">{{ category.slug }}</td>
                    <td>
                        <a href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                        <a href="{{ path('category_edit', {'id': category.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas de catégorie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
