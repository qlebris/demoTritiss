{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th></th>
            <td>
                <div class="row">
                    <div class="col-6">
                        {% if article.imageName1 %}
                            <img class="article-img d-block" src="/images/{{ article.imageName1 }}">
                        {% endif %}
                    </div>
                    <div class="col-6">
                        {% if article.imageName2 %}
                            <img class="article-img d-block" src="/images/{{ article.imageName2 }}">
                        {% endif %}
                    </div>
                    <div class="col-6">
                        {% if article.imageName3 %}
                            <img class="article-img d-block" src="/images/{{ article.imageName3 }}">
                        {% endif %}
                    </div>
                    <div class="col-6">
                        {% if article.imageName4 %}
                            <img class="article-img d-block" src="/images/{{ article.imageName4 }}">
                        {% endif %}
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ article.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ article.description }}</td>
        </tr>
        <tr>
            <th>Référence</th>
            <td>{{ article.reference }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ article.price }}</td>
        </tr>
        <tr>
            <th>Vendu</th>
            <td><span class="{{ article.sold ? 'sold' : 'unsold' }}">{{ article.sold ? 'Oui' : 'Non' }}</span></td>
        </tr>
        </tbody>
    </table>

    <div class="row justify-content-between">
        <a class="btn btn-round btn-outline-dark" href="{{ path('article_index') }}">retour à la liste</a>
        <a class="btn btn-round btn-primary" href="{{ path('article_edit', {'id': article.id}) }}">
            <i class="fas fa-pencil-alt"></i> Editer</a>
        {{ include('admin/article/_delete_form.html.twig') }}
    </div>
{% endblock %}
