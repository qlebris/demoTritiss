{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <a class="m-2 btn-round btn btn-primary" href="{{ path('article_new') }}">
            <i class="fas fa-plus-circle"></i> <span
                    class="d-lg-inline-block d-xs-none d-sm-none d-md-none">Ajouter</span></a>
    </div>
    <table class="mt-2 table">
        <thead>
        <tr>
            <th>Article</th>
            <th>Description</th>
            <th>Référence</th>
            <th>Prix</th>
            <th>Vendu</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr {% if article.sold %}class="muted"{% endif %}>
                <td>{{ article.name }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.reference }}</td>
                <td>{{ article.price }}</td>
                <td class="{{ article.sold ? 'muted' : 'unsold' }}">{{ article.sold ? 'vendu' : 'dispo' }}</td>
                <td>
                    {% if article.imageName1 %}
                        <img class="article-mini" src="/images/{{ article.imageName1 }}">
                    {% endif %}
                    {% if article.imageName2 %}
                        <img class="article-mini" src="/images/{{ article.imageName2 }}">
                    {% endif %}
                    {% if article.imageName3 %}
                        <img class="article-mini" src="/images/{{ article.imageName3 }}">
                    {% endif %}
                    {% if article.imageName4 %}
                        <img class="article-mini" src="/images/{{ article.imageName4 }}">
                    {% endif %}
                </td>
                <td class="row justify-content-around">
                    <a href="{{ path('article_show', {'id': article.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">Pas d'articles trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
