<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %} L'échoppe créative {% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<header>
    {{ render(controller('App\\Controller\\WebSiteController::navbar', {'request': app.request})) }}
</header>
<body {% if app.environment == 'dev' %} class="size" {% endif %}>
<div class="container">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
